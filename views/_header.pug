header.header
    nav.nav.nav--tours
        a.nav__el(href="/overview") All tours
        
    div.header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    
    nav.nav.nav--user
        if user
            a.nav__el#us
                img.nav__user-img(src=`/img/users/${user.photo}` alt="User photo")
                span= user.name.split(' ')[0]
            a.nav__el.nav__el--logout Logout
        else

            button.nav__el#lg  Log in
            button.nav__el.nav__el--cta Sign up